{% extends "base.html.twig" %}

{% block title %}Lista de Exigibilidades{% endblock %}

{% block content %}
    <div class="container-fluid my-4">
        <h1>Lista de Exigibilidades</h1>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <a href="{{ path('web_exigibilidade_create') }}" class="btn btn-primary">Adicionar Novo Pagamento</a>
                <a id="export-btn-xml" href="{{ path('web_exigibilidade_export_xml') }}" class="btn btn-secondary">Exportar para XML</a>

            </div>
        </div>

        <div class="row g-3 align-items-center mb-3">
            <div class="col-md-3">
                <label for="filterExercicio" class="form-label">Filtrar por Exercício:</label>
                <select id="filterExercicio" class="form-select">
                    <option value="">Todos</option>
                    {% set anos_unicos = [] %}
                    {% for item in exigibilidades %}
                        {% if item.exercicio not in anos_unicos %}
                            {% set anos_unicos = anos_unicos|merge([item.exercicio]) %}
                        {% endif %}
                    {% endfor %}

                    {% for exercicio in anos_unicos|sort %}
                        <option value="{{ exercicio }}">{{ exercicio }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="filterSemestre" class="form-label">Filtrar por Semestre:</label>
                <select id="filterSemestre" class="form-select">
                    <option value="">Todos</option>
                    <option value="01">1º Semestre</option>
                    <option value="02">2º Semestre</option>
                </select>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table js-grid w-100">
                <thead class="table-dark">
                <tr>
                    <th>Exercício</th>
                    <th>Semestre</th>
                    <th>Órgão</th>
                    <th>Fonte de Recurso</th>
                    <th>Tipo de Recurso</th>
                    <th>Tipo de Exigibilidade</th>
                    <th>Nº Contrato Emprestimo</th>
                    <th>Ano Contrato Emprestimo</th>
                    <th>Nº do Convênio</th>
                    <th>Ano Convênio</th>
                    <th>Nº Nota fiscal</th>
                    <th>Data NF</th>
                    <th>Data Atesto</th>
                    <th>Id Pagamento</th>
                    <th>Data Pagamento</th>
                    <th>Valor do Pagamento</th>
                    <th>Nº Contrato</th>
                    <th>Ano Contrato</th>
                    <th>Valor da Contratação</th>
                    <th>CPF ou CNPJ do Credor</th>
                    <th>Razão Social</th>
                    <th>Ações</th>
                </tr>
                </thead>
                <tbody>
                {% for exigibilidade in exigibilidades %}
                    <tr>
                        <td>{{ exigibilidade.exercicio }}</td>
                        <td>{{ exigibilidade.semestre }}</td>
                        <td>{{ exigibilidade.codOrgao }}</td>
                        <td>{{ exigibilidade.codFonteRecurso }}</td>
                        <td>{{ exigibilidade.tipoRecurso }}</td>
                        <td>{{ exigibilidade.tipoExigibilidade }}</td>
                        <td>{{ exigibilidade.numContratoEmprestimo|trim('0', 'left') }}</td>
                        <td>{{ exigibilidade.anoContratoEmprestimo }}</td>
                        <td>{{ exigibilidade.numConvenio|trim('0', 'left') }}</td>
                        <td>{{ exigibilidade.anoConvenio }}</td>
                        <td>{{ exigibilidade.numNotaFiscal|trim('0', 'left') }}</td>
                        <td>{{ exigibilidade.dataNotaFiscal|date("d/m/Y") }}</td>
                        <td>{{ exigibilidade.dataAtesto|date("d/m/Y") }}</td>
                        <td>{{ exigibilidade.idPagamento|trim('0', 'left') }}</td>
                        <td>{{ exigibilidade.dataPagamento|date("d/m/Y") }}</td>
                        <td>R$ {{ exigibilidade.valorPagamento|number_format(2, ',', '.') }}</td>
                        <td>{{ exigibilidade.numContrato|trim('0', 'left') }}</td>
                        <td>{{ exigibilidade.anoContrato }}</td>
                        <td>R$ {{ exigibilidade.valorContratacao|number_format(2, ',', '.') }}</td>
                        <td>{{ exigibilidade.cpfCnpjCredor }}</td>
                        <td>{{ exigibilidade.razaoSocial }}</td>
                        <td style="min-width: 150px;">
                            <div class="d-flex gap-2">
                                <a href="{{ path('web_exigibilidade_edit', {id: exigibilidade.id}) }}" class="btn btn-sm btn-outline-warning w-100">Editar</a>
                                <button type="button" class="btn btn-sm btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="{{ exigibilidade.id }}">
                                    Deletar
                                </button>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center">Nenhuma exigibilidade cadastrada.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Tem certeza que deseja deletar este item?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form id="deleteForm" method="post">
                        <button type="submit" class="btn btn-danger">Deletar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/exigibilidade-forms.js') }}"></script>
{% endblock %}
