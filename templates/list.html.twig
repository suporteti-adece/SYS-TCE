{% extends "base.html.twig" %}

{% block title %}Lista de Exigibilidades{% endblock %}

{% block content %}
    <h1>Lista de Exigibilidades</h1>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a href="{{ path('web_exigibilidade_create') }}" class="btn btn-primary">Adicionar Novo Pagamento</a>
            <button class="btn btn-secondary">Exportar para XML</button>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th>Exercício</th>
                <th>Semestre</th>
                <th>Órgão</th>
                <th>Nº Contrato</th>
                <th>Credor (CPF/CNPJ)</th>
                <th>Valor da Contratação</th>
                <th>Valor do Pagamento</th>
                <th>Data do Pagamento</th>
                <th>Ações</th>
            </tr>
            </thead>
            <tbody>
            {% for exigibilidade in exigibilidades %}
                <tr>
                    <td>{{ exigibilidade.exercicio }}</td>
                    <td>{{ exigibilidade.semestre }}</td>
                    <td>{{ exigibilidade.codOrgao }}</td>
                    <td>{{ exigibilidade.numContrato }}</td>
                    <td>{{ exigibilidade.cpfCnpjCredor }}</td>
                    <td>R$ {{ exigibilidade.valorContratacao|number_format(2, ',', '.') }}</td>
                    <td>R$ {{ exigibilidade.valorPagamento|number_format(2, ',', '.') }}</td>
                    <td>{{ exigibilidade.dataPagamento }}</td>
                    <td style="min-width: 150px;">
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-sm btn-outline-warning w-100">Editar</a>
                            <a href="#" class="btn btn-sm btn-outline-danger w-100">Deletar</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="text-center">Nenhuma exigibilidade cadastrada.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
